<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background_dark_shade"
    android:layout_height="match_parent"
    tools:context=".Activities.NuwaraEliyaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnAddNewAnuTour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/round_add_button"
            android:padding="10dp"
            android:text="Add Tour"
            android:textAllCaps="false"
            android:textColor="@color/bg_dark"
            app:backgroundTint="@color/bg_light"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/colorWhite">

            <ListView
                android:id="@+id/lvTourView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/bg_dark"
                android:dividerHeight="10.0sp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>